# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
# por padrão o Prettier usa as configurações daqui.
# Inseri a configuração abaixo, pois prefiro single quote.
quote_type = single